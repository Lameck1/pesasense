<div class="w-100 p-3">
  <div class="bg-white p-3 rounded">
    <h1 class="h3">Sign Up </h1>
    <%= form_with model: @user do |f| %>
      <div class= "form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      <%= f.submit "Sign Up", class: "btn btn-primary"%>
    <%end%>
  </div>
</div>
