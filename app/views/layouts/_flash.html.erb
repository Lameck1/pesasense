<% if flash[:notice].present? %>
  <div id="flash-notice" style="border: 1px solid green; color: green; padding: 10px;">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert].present? %>
  <div id="flash-alert" style="border: 1px solid red; color: red; padding: 10px;">
    <%= flash[:alert] %>
  </div>
<% end %>
