<div class="w-100 p-3">
  <div class="bg-white p-3 rounded">
    <h1 class="h3">New Group</h1>
    <%= form_with(model: @group, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, autofocus: true, placeholder: "Group Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :icon %>
        <%= form.file_field :icon, accept: 'image/png, image/gif, image/jpeg', class: "form-control" %>
      </div>
      <%= submit_tag("CREATE GROUP", :class=>"btn btn-success") %>
      <%= error_messages_for(form.object) %>
    <% end %>
  </div>
</div>
